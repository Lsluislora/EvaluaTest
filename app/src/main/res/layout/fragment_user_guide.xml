<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_layout">


    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Encabezado de la aplicación -->
            <TextView
                android:id="@+id/textViewHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button_background"
                android:gravity="center"
                android:padding="16dp"
                android:text="Bienvenido a EvaluaTest"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- CardView con el detalle de la guia de usuario -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewHeader"
                android:layout_margin="16sp">

                <!-- Contenido del CardView -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aqui se te mostrará como poder usar esta aplicacion de forma correcta."
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:textStyle="bold" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <!-- INICIO del detalle del Login/SignUp -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/textViewLogSignDatails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_button_background"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="Inicio de Sesion"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16sp"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/details_log_sign_photo" />


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textViewHeader"
                    android:layout_marginTop="16sp">

                    <!-- Contenido del CardView: Detalles de Inicio de Sesion -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="¿Como Iniciar Sesion?"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableBottom="@android:drawable/divider_horizontal_bright"
                            android:paddingTop="8dp"
                            android:text="Al inicio de la aplicación se muestran las opciones de inicio en la que el usuario pueda registrarse o simplemente acceder sin ningun tipo de registro. Se recomienda el registro para poder tener los datos de los test mas actualizados."
                            android:textColor="#888888"
                            android:textSize="16sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- FIN el detalle del Login/SignUp -->

            <!-- INICIO el detalle del HomePage-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/textViewHomeDatails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_button_background"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="Pagina de Inicio"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16sp"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/details_home_page_photo" />


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16sp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Detalles de la Pagina de Inicio"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableBottom="@android:drawable/divider_horizontal_bright"
                            android:paddingTop="8dp"
                            android:text="En el HomePage puedes ver con detalles cada unas de las secciones de la aplicacion, tambien podras navegar por cada unas de ellas al dar clic en cuarquiera de los elementos que contiene."
                            android:textColor="#888888"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableBottom="@android:drawable/divider_horizontal_bright"
                            android:paddingTop="8dp"
                            android:text="Cada uno de estos elementos tiene detallado que puedes encontrar al precionar en el, vienen indentificado con un estilo minimalista y cada uno con un color que lo caracteriza."
                            android:textColor="#888888"
                            android:textSize="16sp" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <!-- FIN el detalle del HomePage-->


            <!-- INICIO el detalle de la Creacion de Test-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/textViewUserGuideCreaTest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_button_background"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="Crear Test"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16sp"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/details_crea_test_page_photo" />


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16sp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="¿Como puedes crear un Test?"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableBottom="@android:drawable/divider_horizontal_bright"
                            android:paddingTop="8dp"
                            android:text="A la hora de crear un Test tienes dos opciones desde la pagina de inicio, en la barra inferior como en la parte superior dando clic en los botones de crear test que viene detallado con sus respectivos nombres."
                            android:textColor="#888888"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableBottom="@android:drawable/divider_horizontal_bright"
                            android:paddingTop="8dp"
                            android:text="A la hora de la creacion del test, lo primero que teienes que hacer es configurarlo, completando los detalles que te pide para que luego puedas empezar a crear las preguntas para el test."
                            android:textColor="#888888"
                            android:textSize="16sp" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/details_crea_questions_test_page_photo"
                    android:layout_marginTop="16sp"/>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16sp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Crear las Pregungas del Test"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableBottom="@android:drawable/divider_horizontal_bright"
                            android:paddingTop="8dp"
                            android:text="Una vez has configurado el test, en la misma pantalla te sale la opcion de crear las preguntas, solo tienes que seleccionar en el configurador del Test el tipo de test que quieres realizar: 'Tipo Test', 'Seleccion Multiple', 'Falso y Verdadero y proximamente tendras mas opciones de tipos de test.'"
                            android:textColor="#888888"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableBottom="@android:drawable/divider_horizontal_bright"
                            android:paddingTop="8dp"
                            android:text="Luego de crear las preguntas necesarias, solo tienes que darle al boton de 'Crear Test' y se crea el test con las preguntas ya establecidas. Luego podras buscar el Test y empezarlo inmediatamente."
                            android:textColor="#888888"
                            android:textSize="16sp" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>
            <!-- FIN el detalle de la Creacion de Test-->


            <!-- INICIO el detalle de Lista de Test-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/textViewUserGuideListTest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_button_background"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="Ver Test"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16sp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/details_list_test_page_photo" />


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16sp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Ver todos los Test Disponibles"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableBottom="@android:drawable/divider_horizontal_bright"
                            android:paddingTop="8dp"
                            android:text="En este punto puedes ver la lista de todos los test disponibles y creados por ti. Una vez creas un test, este es el lugar en donde aparece y se agrega a la lista que tengas."
                            android:textColor="#888888"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableBottom="@android:drawable/divider_horizontal_bright"
                            android:paddingTop="8dp"
                            android:text="Nota importante: Ten en cuenta que de momento los test que puedes ver son los que creas tu, se almacenan en tu movil, si borras la aplicacion se siguen manteniendo en la base de datos, pero si eliminas la base de datos de la aplicacion, perderas todos los test creados."
                            android:textColor="#888888"
                            android:textSize="16sp" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <!-- FIN el detalle del Lista de Test-->


            <!-- INICIO el detalle de Usuario-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/textViewUserGuideUserDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_button_background"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="Detalles de Usuario"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16sp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/details_user_data_photo" />


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16sp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Ver los detalles de Usuario"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableBottom="@android:drawable/divider_horizontal_bright"
                            android:paddingTop="8dp"
                            android:text="En este punto se puede ver los detalles de usuario con los te has registrado, Nombre completo, Email y Id de Usuario."
                            android:textColor="#888888"
                            android:textSize="16sp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <!-- FIN el detalle de Usuario-->

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>